<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#057e98"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:layout_gravity="center"
            android:textSize="33sp"
            android:textColor="#f5f5f5"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/viewNotAnswred"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_not_visit_24"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#191919"
            android:layout_marginLeft="10dp"
            android:text="Do not press back, home, menu buttons"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_not_visit_24"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#191919"
            android:layout_marginLeft="10dp"
            android:text="Make sure your all applications hass been closed"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_not_visit_24"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#191919"
            android:layout_marginLeft="10dp"
            android:text="Any other instructions please?"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_not_visit_24"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#191919"
            android:layout_marginLeft="10dp"
            android:text="Any other instructions please?"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_not_visit_24"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#191919"
            android:layout_marginLeft="10dp"
            android:text="Any other instructions please?"/>

    </LinearLayout>

</LinearLayout>