<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#057e98"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/examName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exam Name"
            android:layout_gravity="center"
            android:textSize="33sp"
            android:textColor="#f5f5f5"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewInstruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:layout_marginBottom="15dp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Do not press back, home, menu buttons"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Exam Expiry"/>

                <TextView

                    android:id="@+id/examExpiry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Exam Name"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Exam Type"/>

                <TextView

                    android:id="@+id/examType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Start Date"/>

                <TextView

                    android:id="@+id/startDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="End Date"/>

                <TextView

                    android:id="@+id/endDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Paid Exam"/>

                <TextView

                    android:id="@+id/paidExam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Amount"/>

                <TextView

                    android:id="@+id/amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Attempt Count"/>

                <TextView

                    android:id="@+id/attemptCont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Expiry"/>

                <TextView

                    android:id="@+id/expiry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Attempt"/>

                <TextView

                    android:id="@+id/attempt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Attempt Order"/>

                <TextView

                    android:id="@+id/attemptOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>