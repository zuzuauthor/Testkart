<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">


            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_arrow_back_white_24dp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:adjustViewBounds="true"
                app:srcCompat="@raw/testkart_logo_blue" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Create Account "
                android:textColor="#191919"
                android:textSize="23sp" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/viewProfilePic"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:src="@raw/user_default_image"
                    app:civ_border_color="#FF191919"
                    app:civ_border_width="1dp" />

                <ImageView
                    android:id="@+id/viewRank1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textSize="13sp"
                    android:textColor="#191919"
                    android:padding="8dp"
                    android:text="0"

                    app:srcCompat="@drawable/edit_white"
                    android:background="@drawable/bg_btn_round"
                    android:layout_gravity="end|bottom"
                    android:layout_marginTop="15dp" />

            </FrameLayout>


            <EditText
                android:id="@+id/viewInputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/viewInputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Email"
                android:inputType="textEmailAddress" />


            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:id="@+id/viewInputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:padding="10dp"
                android:hint="Password"
                android:ems="10"
                android:inputType="textPassword" />

            <!--<EditText
                android:id="@+id/viewInputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPassword" />-->

            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:id="@+id/viewConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:padding="10dp"
                android:hint="Confirm Password"
                android:ems="10"
                android:inputType="textPassword" />

           <!-- <EditText
                android:id="@+id/viewConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Confirm Password"
                android:inputType="textPassword" />-->


            <EditText
                android:id="@+id/viewInputAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Address"
                android:inputType="textPostalAddress" />

            <!--<net.rimoto.intlphoneinput.IntlPhoneInput
                android:id="@+id/viewInputPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:hint="Phone" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <!--<com.rilixtech.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:ccp_defaultCode="91"/>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/viewCountryCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:maxLength="5"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="+91"
                        android:inputType="phone" />

                    <EditText
                        android:id="@+id/viewInputPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:maxLength="10"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Mobile Number"
                        android:inputType="phone" />

                </LinearLayout>



            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical"
                android:background="@drawable/bg_round_corners">

                <TextView
                    android:id="@+id/viewSelectGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e0e0e0"
                    android:textSize="13sp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="1dp"
                    android:text="Select Group"
                    android:textColor="@color/Color_Black"
                    android:gravity="center"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <me.gujun.android.taggroup.TagGroup
                        android:id="@+id/tag_group"
                        style="@style/TagGroup"
                        app:atg_isAppendMode="false"/>

                </FrameLayout>

            </LinearLayout>


            <Button
                android:id="@+id/viewButtonSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:text="SIGN UP"
                android:textColor="#F5F5F5" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
