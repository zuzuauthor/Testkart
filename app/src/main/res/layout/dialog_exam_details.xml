<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#057e98"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/viewExamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exam Name"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="33sp"
            android:textColor="#f5f5f5"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="15sp"
            android:layout_marginBottom="15dp"
            android:textColor="#191919"
            android:layout_marginLeft="10dp"
            android:text="Do not press back, home, menu buttons"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Exam Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Type"/>

                <TextView

                    android:id="@+id/viewExamType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Passing Percentage"/>

                <TextView

                    android:id="@+id/viewPP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Exam Duration (in min)"/>

                <TextView

                    android:id="@+id/viewExamDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Negative Marking"/>

                <TextView

                    android:id="@+id/viewNegativeMarking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>


            </LinearLayout>


            <!-- Exam Start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Start Date"/>

                <TextView

                    android:id="@+id/viewExamStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>


            </LinearLayout>


            <!-- Exam End -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="End Date"/>

                <TextView

                    android:id="@+id/viewExamEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>

            </LinearLayout>


            <!-- Total Marks -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Total Marks"/>

                <TextView

                    android:id="@+id/viewTotalMarks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>

            </LinearLayout>


            <!-- Total Marks -->
            <LinearLayout
                android:id="@+id/containerAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="Amount"/>

                <TextView

                    android:id="@+id/viewAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"
                    android:textSize="15sp"
                    android:textColor="#191919"
                    android:layout_marginLeft="10dp"
                    android:text="00"/>

            </LinearLayout>

            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_corners"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#191919"
                        android:background="#e0e0e0"
                        android:text="Subjects"
                        android:padding="8dp"/>
                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#e0e0e0"
                        android:textColor="#191919"
                        android:text="Total Question"
                        android:padding="8dp"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>